# Stich Production - Production Environment Variables
# Copy this file to .env and fill in your actual values

# Application Info (Production)
VITE_APP_NAME="Stich Production"
VITE_APP_VERSION="1.0.0"
VITE_APP_URL="https://your-project-id.web.app"

# Firebase Configuration (Replace with your actual Firebase project values)
VITE_FIREBASE_API_KEY="your-production-firebase-api-key"
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="123456789"
VITE_FIREBASE_APP_ID="your-app-id"

# API URLs (Production) - Simplified with Firebase Hosting
VITE_API_BASE_URL="https://your-project-id.web.app/api"
VITE_FUNCTIONS_BASE_URL="https://us-central1-your-project-id.cloudfunctions.net"

# AI Provider API Keys (Optional - users can add their own via BYOK)
# Leave empty to force users to use BYOK system
VITE_OPENAI_API_KEY=""
VITE_ANTHROPIC_API_KEY=""
VITE_GOOGLE_AI_API_KEY=""
VITE_CEREBRAS_API_KEY=""

# WebSocket Configuration (Production)
VITE_WS_URL="wss://us-central1-your-project-id.cloudfunctions.net"

# Feature Flags (Production)
VITE_FEATURE_AUTH="true"
VITE_FEATURE_REALTIME="true"
VITE_FEATURE_EXECUTION="true"
VITE_FEATURE_DEPLOYMENT="true"
VITE_FEATURE_ANALYTICS="true"
VITE_FEATURE_PAYMENTS="false"
VITE_FEATURE_ADMIN="true"

# Production Settings
VITE_DEBUG="false"
VITE_LOG_LEVEL="error"

# Analytics (Optional)
VITE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""

# Security
VITE_ENABLE_CORS="true"
VITE_ALLOWED_ORIGINS="https://your-project-id.web.app,https://your-project-id.firebaseapp.com"